<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@id/tprightside"
        android:orientation="horizontal">

        <ImageView
            android:id="@id/tpm_icon_place"
            android:layout_width="@dimen/fab_icon_size"
            android:layout_height="@dimen/fab_icon_size"
            android:layout_marginBottom="@dimen/button_margin"
            android:layout_marginLeft="@dimen/button_margin"
            android:layout_marginTop="@dimen/button_margin"
            android:src="@drawable/ic_tv_view" />

        <TextView
            android:id="@id/tpm_display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/button_margin"
            android:lines="1"
            android:text="XXX"
            android:textSize="17sp" />


    </LinearLayout>

    <LinearLayout
        android:id="@id/tprightside"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:gravity="end"
        android:orientation="horizontal">

        <Switch
            android:id="@id/mswitcher"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/linear_gap" />
    </LinearLayout>
</RelativeLayout>